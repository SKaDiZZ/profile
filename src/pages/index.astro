---
import { Image } from "astro:assets";
import Card from "../components/Card.astro";
import Nav from "../components/Nav.astro";
import Layout from "../layouts/Layout.astro";

import samke from "../../public/images/samke.png";
import X from "../components/icons/X.astro";
import Deviantart from "../components/icons/Deviantart.astro";
import Linkedin from "../components/icons/Linkedin.astro";
import Npm from "../components/icons/Npm.astro";
import Github from "../components/icons/Github.astro";
import LinkCard from "../components/LinkCard.astro";
import Button from "../components/Button.astro";
import InFocus from "../components/InFocus.astro";
---

<Layout title="Samir Kahvedzic - Senior Software Developer - Profile">
  <Nav />

  <section
    id="intro"
    class="pt-44 grid grid-cols-1 xl:grid-cols-2 container px-6 xl:px-0 mx-auto"
  >
    <Image width="865" height="810" src={samke} alt="profile" loading="eager" />
    <div>
      <div class="mb-12">
        <h1 class="text-gradient text-center">Samir</h1>
        <h4 class="text-fg text-center text-xl tracking-widest">
          KAHVEDZIC / SKADIZZ
        </h4>
      </div>
      <div class="grid grid-cols-5 xl:grid-cols-7 gap-2 xl:gap-5 mb-5">
        <div class="col-span-full xl:col-span-2">
          <Card>
            <div class="py-6 fadeout-horizontal w-full overflow-hidden flex h-full">
              <div class="marquee-text">
                <div class="marquee-text-track">
                  <p>JavaScript</p>
                  <p>TypeScript</p>
                  <p>CSS</p>
                  <p>TailwindCSS</p>
                  <p>Accessibility</p>
                  <p>React</p>
                  <p>Angular</p>
                  <p aria-hidden="true">JavaScript</p>
                  <p aria-hidden="true">TypeScript</p>
                  <p aria-hidden="true">CSS</p>
                  <p aria-hidden="true">TailwindCSS</p>
                  <p aria-hidden="true">Accessibility</p>
                  <p aria-hidden="true">React</p>
                  <p aria-hidden="true">Angular</p>
                </div>
              </div>
            </div>
          </Card>
        </div>
        <LinkCard href="https://github.com/SKaDiZZ" title="GitHub">
          <div class="aspect-square flex items-center justify-center">
            <Github classNames="xl:w-12 xl:h-12" />
          </div>
        </LinkCard>
        <LinkCard
          href="https://www.deviantart.com/samirkahvedzic"
          title="DeviantArt"
        >
          <div class="aspect-square flex items-center justify-center">
            <Deviantart classNames="xl:w-12 xl:h-12" />
          </div>
        </LinkCard>
        <LinkCard
          href="https://www.linkedin.com/in/samir-kahvedzic-96265594"
          title="LinkedIn"
        >
          <div class="aspect-square flex items-center justify-center">
            <Linkedin classNames="xl:w-12 xl:h-12" />
          </div>
        </LinkCard>
        <LinkCard href="https://www.npmjs.com/~skadizz" title="NPM">
          <div class="aspect-square flex items-center justify-center">
            <Npm classNames="xl:w-12 xl:h-12" />
          </div>
        </LinkCard>
        <LinkCard href="https://twitter.com/SKaDiZZ" title="X">
          <div class="aspect-square flex items-center justify-center">
            <X classNames="xl:w-12 xl:h-12" />
          </div>
        </LinkCard>
      </div>
      <Card>
        <p class="p-6">
          Welcome to my online profile. Learn about me, my projects, experience,
          contact me.
          <Button>Hello</Button>
        </p>
        <InFocus>
          <X classNames="w-6 h-6" />
        </InFocus>
      </Card>
    </div>
  </section>

  <section id="projects">
    <h1 class="text-gradient">Samir Kahvedzic</h1>
    <p class="instructions">
      Welcome to my online profile. Learn about me, my projects, experience,
      contact me.
    </p>
  </section>

  <section id="experience">
    <h1 class="text-gradient">Samir Kahvedzic</h1>
    <p class="instructions">
      Welcome to my online profile. Learn about me, my projects, experience,
      contact me.
    </p>
  </section>

  <section id="contact">
    <h1 class="text-gradient">Samir Kahvedzic</h1>
    <p class="instructions">
      Welcome to my online profile. Learn about me, my projects, experience,
      contact me.
    </p>
  </section>
</Layout>

<style>

  .astro-a {
    position: absolute;
    top: -32px;
    left: 50%;
    transform: translatex(-50%);
    width: 220px;
    height: auto;
    z-index: -1;
  }


  .instructions {
    margin-bottom: 2rem;
    border: 1px solid rgba(var(--accent-light), 25%);
    background: linear-gradient(
      rgba(var(--accent-dark), 66%),
      rgba(var(--accent-dark), 33%)
    );
    padding: 1.5rem;
    border-radius: 8px;
    @apply text-white;
  }
  .instructions code {
    font-size: 0.8em;
    font-weight: bold;
    background: rgba(var(--accent-light), 12%);
    color: rgb(var(--accent-light));
    border-radius: 4px;
    padding: 0.3em 0.4em;
  }
  .instructions strong {
    color: rgb(var(--accent-light));
  }
  .link-card-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
    gap: 2rem;
    padding: 0;
  }
  section {
    @apply min-h-screen;
  }

  .fadeout-horizontal {
  mask-image: linear-gradient(
    to right,
    transparent,
    black var(--fade-size, 5rem),
    black calc(100% - var(--fade-size, 5rem)),
    transparent
  );
}
  .marquee-text {
    overflow: clip;
  }

  .marquee-text-track {
    display: flex;
    gap: 1.5rem;
    animation: marquee-move-text var(--speed, 10s) linear infinite
      var(--direction, forwards);
  }

  .marquee-text p {
    padding: 0;
  }

  @keyframes marquee-move-text {
    to {
      transform: translateX(-50%);
    }
  }
</style>
